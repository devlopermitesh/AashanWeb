{
  "name": "aashanweb",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "test": "jest",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "format": "prettier --write **/*.{js,jsx,ts,tsx,json,css,md}",
    "generateType": "payload generate:types --output payload-types.ts",
    "vercel-build": "npx payload migrate && next build",
    "prepare": "husky install || true"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@clerk/nextjs": "^6.37.3",
    "@payloadcms/db-mongodb": "3.76.1",
    "@payloadcms/email-nodemailer": "3.76.1",
    "@payloadcms/next": "3.76.1",
    "@payloadcms/plugin-cloud-storage": "3.76.1",
    "@payloadcms/richtext-lexical": "3.76.1",
    "cloudinary": "^2.9.0",
    "commitlint": "^20.4.1",
    "graphql": "^16.8.1",
    "next": "16.1.6",
    "nodemailer": "^8.0.0",
    "payload": "3.76.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "typescript": "^5"
  }
}
